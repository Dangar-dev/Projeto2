@model Projeto2.Models.Usuario;
@{
	ViewData["Title"] = "Cadastro";
}
<h2>Cadastro</h2>

<form asp-action="Cadastro"  id=Cadastro method="post">
	<div>
		<label>Nome</label> <br />
		<input asp-for="Nome" required />
	</div>
	<div>
		<label>Email</label> <br />
		<input asp-for="Email" type="email" required />
	</div>
	<div>
		<label>Senha</label> <br />
		<input asp-for="Senha" type="password" required />
	</div>
	<br />
	<button type="submit">Novo Cadastrado</button>
</form>